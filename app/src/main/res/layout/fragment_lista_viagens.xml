<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_tela"
    android:animateLayoutChanges="true">

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_header_gradient"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_titulo_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestão de Fretes"
        android:textColor="@color/white_fixo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controle suas viagens e lucros"
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/text_titulo_app"
        app:layout_constraintTop_toBottomOf="@id/text_titulo_app" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_viagem_andamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1B5E20"
        app:strokeColor="#43A047"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/text_subtitulo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_status_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIAGEM EM ANDAMENTO"
                android:textColor="#81C784"
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/icon_truck_status"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_viagens"
                app:tint="@color/white_fixo"
                app:layout_constraintTop_toBottomOf="@id/text_status_titulo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/text_rota_ativa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Goiânia -> São Paulo"
                android:textColor="@color/white_fixo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/icon_truck_status"
                app:layout_constraintTop_toTopOf="@id/icon_truck_status"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_cliente_ativo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cliente: HEINZ"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/icon_truck_status"
                app:layout_constraintTop_toBottomOf="@id/text_rota_ativa"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btn_ver_detalhes_ativo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATUALIZAR >"
                android:textColor="@color/colorSecondary"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:layout_constraintTop_toBottomOf="@id/icon_truck_status"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="0dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_viagens"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/card_viagem_andamento"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/viagem_item" />

    <LinearLayout
        android:id="@+id/layout_estado_vazio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/view_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_viagens"
            app:tint="@color/texto_secundario" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhuma viagem cadastrada"
            android:textColor="@color/texto_secundario"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toque no + para começar"
            android:textColor="@color/texto_secundario"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_adicionar_viagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorSecondary"
        app:tint="@color/white_fixo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>